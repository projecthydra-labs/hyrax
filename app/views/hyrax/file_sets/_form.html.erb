<%= simple_form_for [main_app, @change_set], html: { multipart: true } do |f| %>
  <fieldset class="required">
    <span class="control-label">
      <%= label_tag 'file_set[title][]', 'Title',  class: "string optional" %>
    </span>
    <%= text_field_tag 'file_set[title][]', @change_set.title.first, class: 'form-control', required: true %>
  </fieldset>

  <div class="row">
    <div class="col-md-12 form-actions">
      <%= f.submit(
        (@change_set.persisted? ? "Update Attached File" : %(Attach to #{@change_set.parent.human_readable_type})),
        class: 'btn btn-primary'
      ) %>
      <%= link_to 'Cancel', parent_path(@change_set.parent), class: 'btn btn-link' %>
    </div>
  </div>
<% end %>
